configuration {
    modi: "window,drun,ssh";
   font: "FireCode NF 10";
    location: 0;
    yoffset: 0;
    xoffset: 0;
   fixed-num-lines: true;
    show-icons: true;
    terminal: "kitty";
    theme: "~/.config/rofi/theme/Arc-Dark.rasi";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

